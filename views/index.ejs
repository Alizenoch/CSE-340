<div class="home-container">
  <!-- Welcome heading -->
  <h1>DMC DeLorean</h1>
  

  <!-- Flash messages -->
  <% if (messages.notice) { %>
    <div class="flash notice">
      <% messages.notice.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>

  <% if (messages.error) { %>
    <div class="flash error">
      <% messages.error.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }) %>
    </div>
  <% } %>
  
  <!-- Featured car section -->
  <section class="featured-car">
  <h2>Welcome to CSE Motors</h2>
  <img src="/images/vehicles/delorean.jpg" alt="Silver DMC DeLorean sports car front view with gullwing doors" class="car-image">

  <div class="features">
    <span>3 Cup holders</span>
    <span>Superman doors</span>
    <span>Fuzzy dice!!</span>
  </div>

  <button class="own-btn">Own Today</button>
</section>


  <!-- Two-column layout -->
  <div class="columns">
    <!-- Upgrades section -->
    <div class="upgrades">
      <h3>Delorean Upgrades</h3>
      <div class="upgrade-grid">
        <div class="upgrade-item">
          <img src="/images/upgrades/flux-cap.png" alt="Icon of the Flux Capacitor upgrade">
          <p>Flux Capacitor</p>
        </div>
        <div class="upgrade-item">
          <img src="/images/upgrades/flame.jpg" alt="Car with flame decals painted along the sides">
          <p>Flame Decals</p>
        </div>
        <div class="upgrade-item">
          <img src="/images/upgrades/bumper_sticker.jpg" alt="Assorted bumper stickers displayed on a car bumper">
          <p>Bumper Stickers</p>
        </div>
        <div class="upgrade-item">
          <img src="/images/upgrades/hub-cap.jpg" alt="Close-up of shiny chrome hub caps">
          <p>Hub Caps</p>
        </div>
      </div>
    </div>

    <!-- Reviews section -->
    <div class="reviews">
      <h3>DMC DeLorean Reviews</h3>
      <ul>
        <li>“So fast it’s almost like traveling in time.” (4/5)</li>
        <li>“Coolest ride on the road.” (4/5)</li>
        <li>“I’m feeling McFly!” (5/5)</li>
        <li>“The most futuristic ride of our day.” (4.5/5)</li>
        <li>“80’s livin and I love it!” (5/5)</li>
      </ul>
    </div>
  </div>
</div>



