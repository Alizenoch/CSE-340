<%- include('../partials/header') %>

<h1><%= item.inv_make %> <%= item.inv_model %> (<%= item.inv_year %>)</h1>

<div class="vehicle-detail">
  <img src="<%= item.inv_image %>" 
       alt="Image of <%= item.inv_make %> <%= item.inv_model %>" 
       class="vehicle-image">

  <div class="vehicle-info">
    <h2 class="vehicle-price"> 
      <%= new Intl.NumberFormat("en-US", { style: "currency", currency: "USD" }).format(item.inv_price) %>
    </h2>
    <p><strong>Description:</strong> <%= item.inv_description %></p>
    <p><strong>Color:</strong> <%= item.inv_color %></p>
    <p><strong>Miles:</strong> <%= new Intl.NumberFormat("en-US").format(item.inv_miles) %> miles</p>
  </div>
</div>

<a href="/inv">‚Üê Back to Inventory</a>

