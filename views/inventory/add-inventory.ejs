<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
</head>
<body>
  <!-- Page Heading -->
  <h1 class="inventory-heading"><%= title %></h1>
  <p class="inventory-subheading">Use the form below to add a new vehicle to inventory.</p>

  <!-- Flash Messages -->
  <% if (messages.error && messages.error.length) { %>
    <% messages.error.forEach(function(err) { %>
      <p style="color:red;"><%= err %></p>
    <% }) %>
  <% } %>
  <% if (messages.success && messages.success.length) { %>
    <p style="color:green;"><%= messages.success[0] %></p>
  <% } %>

  <!-- Add Inventory Form -->
  <form class="inventory-form" action="/inv/add-inventory" method="post">
    <label for="make">Make:</label>
    <input type="text" id="make" name="make"
           value="<%= typeof make !== 'undefined' ? make : '' %>" required>

    <label for="model">Model:</label>
    <input type="text" id="model" name="model"
           value="<%= typeof model !== 'undefined' ? model : '' %>" required>

    <label for="year">Year:</label>
    <input type="number" id="year" name="year"
           value="<%= typeof year !== 'undefined' ? year : '' %>" required>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01"
           value="<%= typeof price !== 'undefined' ? price : '' %>" required>
    
    <label for="miles">Miles:</label>
<input type="number" id="miles" name="miles"
       value="<%= typeof miles !== 'undefined' ? miles : '' %>" required>

<label for="color">Color:</label>
<input type="text" id="color" name="color"
       value="<%= typeof color !== 'undefined' ? color : '' %>" required>

<label for="description">Description:</label>
<textarea id="description" name="description" required><%= typeof description !== 'undefined' ? description : '' %></textarea>

<label for="image">Image Path:</label>
<input type="text" id="image" name="image"
       value="<%= typeof image !== 'undefined' ? image : '' %>" required>

<label for="thumbnail">Thumbnail Path:</label>
<input type="text" id="thumbnail" name="thumbnail"
       value="<%= typeof thumbnail !== 'undefined' ? thumbnail : '' %>" required>
       
    <label for="classificationId">Classification:</label>
    <select id="classificationId" name="classificationId" required>
      <%- classificationList %> <!-- âœ… dynamic dropdown -->
    </select>

    <button type="submit">Add Vehicle</button>
  </form>
</body>
</html>
